let
  key = ''
    ssh-rsa  joerg@turingmachine
  '';
  legacyKey = "ssh-rsa  joerg@turingmachine";
in
{
  users.extraUsers = {
    mgmt = {
      isNormalUser = true;
      home = "/home/joerg";
      extraGroups = [ "wheel" "docker" "plugdev" "vboxusers" "adbusers" "input" "kvm" "wireshark" ];
      shell = "/run/current-system/sw/bin/zsh";
      uid = 1000;
      openssh.authorizedKeys.keys = [ key ];
    };

    root.openssh.authorizedKeys.keys = [ key ];
  };

  boot.initrd.network.ssh.authorizedKeys = [ legacyKey ];

}
