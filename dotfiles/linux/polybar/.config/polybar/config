[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 4

label-open = 
label-close = 
label-separator =  
label-separator-foreground = ${colors.foreground-alt}
label-active-font = 1

menu-0-0 = " Restart"
menu-0-0-exec = sudo reboot
menu-0-1 = "     Shutdown"
menu-0-1-exec = sudo poweroff

[module/spotify]
type = custom/script
interval = 1
format-prefix = "  "
format = <label>
exec = python /home/ghuntley/.config/polybar/spotify_status.py -f '{song}: {artist}'

label = %output%
label-active-font = 3

[module/weather]
type = custom/script
exec = busctl --user -j get-property io.ntfd /weather openweathermap.strings RenderedTemplate | jq -r .data
interval = 60
label-font = 3

[module/update]
type = custom/script
exec = yay -Qu | wc -l
interval = 1000
label = %output%
format-prefix = " "

